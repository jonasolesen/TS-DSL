{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
    ],
    "types": [
      "node"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
